<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inabananami.japanesedemo.dao.mapper.AdminMapper">
    <select id="findUserByAccount" parameterType="com.inabananami.japanesedemo.vo.UserVo">
        select * from user where account=#{account};
    </select>
    <update id="banUserByAccount">
        update user set status='banned' where account=#{account};
    </update>
</mapper>